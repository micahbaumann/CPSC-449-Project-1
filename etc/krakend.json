{
    "$schema": "https://www.krakend.io/schema/v2.4/krakend.json",
    "version": 3,
    "endpoints": [
            {
                "endpoint": "/student/list",
                "method": "GET",
                "output_encoding": "no-op",
                "backend": [
                {
                    "url_pattern": "/list",
                    "method": "GET",
                    "host": [
                        "http://localhost:5000"
                    ],
                    "encoding": "no-op",
                    "extra_config": {
                        "backend/http": {
                            "return_error_details": "backend_alias"
                        }
                    }
                }
                ]
            },
            {
                "endpoint": "/registrar/freeze/{isfrozen}",
                "method": "PUT",
                "output_encoding": "no-op",
                "backend": [
                {
                    "url_pattern": "/freeze/{isfrozen}",
                    "method": "PUT",
                    "host": [
                        "http://localhost:5000"
                    ],
                    "encoding": "no-op",
                    "extra_config": {
                        "backend/http": {
                            "return_error_details": "backend_alias"
                        }
                    }
                }
                ]
            },
            {
                "endpoint": "/registrar/change/{classid}/{newprofessorid}",
                "method": "PUT",
                "output_encoding": "no-op",
                "backend": [
                {
                    "url_pattern": "/change/{classid}/{newprofessorid}",
                    "method": "PUT",
                    "host": [
                        "http://localhost:5000"
                    ],
                    "encoding": "no-op",
                    "extra_config": {
                        "backend/http": {
                            "return_error_details": "backend_alias"
                        }
                    }
                }
                ]
            }
        ]
}
